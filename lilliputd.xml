<?xml version="1.0" encoding="UTF-8"?>
<dev driver="lilliputd">
<!--
    There's a subset of Lilliput commands below. They were chosen as most useful for common tasks.
    You can add, remove or modify them as long as you know what you are doing and the XML document remains valid.

    Mode attribute says if command is read only, write only or read/write.
    Values of wDuration and rDuration are defined in miliseconds.
    Number values can be decimal or hexadecimal. Hex numbers must be used with prefix 0x
-->
    <command name="input" code="0x00" mode="w">
        <!-- Set current input. Return string. Command: 'input input_name' -->
        <value name="input">
            <!-- Ensure this list matches the status command's input field -->
            <item name="SDI1" value="0x00"/>
            <item name="SDI2" value="0x01"/>
            <item name="SDI3" value="0x02"/>
            <item name="SDI4" value="0x03"/>
            <item name="SFP" value="0x04"/>
            <item name="2SI" value="0x05"/>
            <item name="Square Division" value="0x06"/>
            <item name="HDMI" value="0x07"/>
            <item name="Multiviewer" value="0x10"/>
            <!-- and some more -->
        </value>
        <value name="mv1-2">
            <item name="SDI1-SDI1" value="0x00"/>
            <item name="SDI1-SDI2" value="0x01"/>
            <item name="SDI2-SDI2" value="0x11"/>
            <item name="SDI3-SDI3" value="0x22"/>
            <item name="SDI3-SDI4" value="0x23"/>
            <item name="SDI4-SDI4" value="0x33"/>
            <item name="SFP-SFP" value="0x44"/>
            <item name="HDMI-HDMI" value="0x55"/>
        </value>
        <value name="mv3-4">
            <item name="SDI1-SDI1" value="0x00"/>
            <item name="SDI1-SDI2" value="0x01"/>
            <item name="SDI2-SDI2" value="0x11"/>
            <item name="SDI3-SDI3" value="0x22"/>
            <item name="SDI3-SDI4" value="0x23"/>
            <item name="SDI4-SDI4" value="0x33"/>
            <item name="SFP-SFP" value="0x44"/>
            <item name="HDMI-HDMI" value="0x55"/>
        </value>
    </command>
    <command name="audio" code="0x03" mode="w">
        <value name="volume"/>
        <value name="meter">
            <item name="none" value="0x00"/>
            <item name="level" value="0x10"/>
            <item name="vector" value="0x20"/>
            <item name="level-vector" value="0x30"/>
        </value>
        <value name="right-left-out"/>
    </command>
